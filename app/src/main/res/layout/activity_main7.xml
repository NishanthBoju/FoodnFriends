<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main7Activity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/headerTxt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Food n Friends App"
        android:textColor="#FC0A03"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display2"
        android:textStyle="bold" />

    <ImageView
        android:layout_marginLeft="100dp"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        >

    </ImageView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Restaurant Confirmed"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"
        android:layout_marginLeft="35dp"

        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please Rate The App"
        android:layout_marginTop="35dp"
        android:textStyle="bold"
        android:textColor="#FC0A03"
        android:layout_marginLeft="45dp"

        android:textAppearance="@style/TextAppearance.AppCompat.Display1" />


    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="0.5"
        android:progressTint="#FC0A03"
        android:progressBackgroundTint="#b36e60"
        android:outlineAmbientShadowColor="#FC0A03"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="75dp"
        android:rating="0"/>

    <Button
        android:id="@+id/button8"
        android:layout_width="match_parent"
        android:background="#FC0A03"
        android:textStyle="bold"
        android:textColor="@android:color/white"
        android:layout_height="wrap_content"
        android:text="Continue Finding Friends"
        android:layout_marginTop="25dp"/>

    <Button
        android:id="@+id/button13"
        android:layout_width="match_parent"
        android:background="#FC0A03"
        android:textColor="@android:color/white"
android:textStyle="bold"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:layout_marginTop="5dp"/>


</LinearLayout>